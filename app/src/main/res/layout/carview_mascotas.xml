<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_pet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/m_1"
    cardview:cardCornerRadius="@dimen/cardview_radio"
    android:layout_margin="@dimen/m_1"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:padding="@dimen/p_2">

        <ImageView
            android:id="@+id/iv_photo"
            android:src="@drawable/pet_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:layout_margin="@dimen/m_1"
            />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/m_1"
            >

            <LinearLayout
                android:orientation="horizontal"
                android:gravity="start|center_vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/ib_addlike"
                    android:background="@drawable/ic_dogbone_24"
                    android:layout_width="@dimen/cv_imagebutton"
                    android:layout_height="@dimen/cv_imagebutton"
                    android:layout_marginRight="@dimen/m_2"
                    />
                <TextView
                    android:id="@+id/tv_name"
                    android:text="@string/label_name_cv"
                    android:textSize="@dimen/cv_text"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:gravity="end|center_vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_likes"
                    android:text="@string/label_count_cv"
                    android:textSize="@dimen/cv_text"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:background="@drawable/ic_dogbone_solid_24"
                    android:backgroundTint="@color/colorIconCount"
                    android:layout_width="@dimen/cv_imagebutton"
                    android:layout_height="@dimen/cv_imagebutton"
                    android:layout_marginLeft="@dimen/m_2"
                    />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>